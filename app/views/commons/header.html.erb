<% if !current_user.nil? %>

<header class="blog-header py-3 mb-2">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
      </div>
      <div class="col-4 text-center">
        <a class="blog-header-logo text-dark" href="#"><%=current_user.organization.name%></a>
      </div>
      
      <div class="col-4 justify-content-end align-items-center">
  
        <div id="logout" class="py-1">
          <%= link_to 'logout', logout_path, class: 'btn btn-sm btn-outline-secondary' %>
        </div>

        <div id="user-name"  class="py-2">
            <%= current_user.name %>

              <div class="clear"></div>
          <div id="user-role" class="">
            
            <% if current_user.type == 'ChiefEditor' %>
            Chief Editor
            <% elsif current_user.type == 'Writer' %>
            Writer
            <% end %>

          </div>

        </div>

        <%# <div class="clear"></div> %>
        
      </div>
    </div>
  </header>

  <% end %>