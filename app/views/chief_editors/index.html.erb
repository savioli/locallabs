<h1>Chief Editors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chief_editors.each do |chief_editor| %>
      <tr>
        <td><%= chief_editor.name %></td>
        <td><%= chief_editor.email %></td>
        <td><%= chief_editor.type %></td>
        <td><%= chief_editor.organization_id %></td>
        <td><%= link_to 'Show', chief_editor %></td>
        <td><%= link_to 'Edit', edit_chief_editor_path(chief_editor) %></td>
        <td><%= link_to 'Destroy', chief_editor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

